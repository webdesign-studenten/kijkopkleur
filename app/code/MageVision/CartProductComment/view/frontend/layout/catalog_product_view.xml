<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_product_view"/>
    <body>
        <referenceContainer name="product.info.form.content">
            <block class="Magento\Catalog\Block\Product\View" name="product.info.form.comment" as="product_info_form_comment" template="MageVision_CartProductComment::product/view/comment.phtml" before="product.info.addtocart"/>
        </referenceContainer>
        <referenceBlock name="product.info.form.options">
            <block class="Magento\Catalog\Block\Product\View" name="product.info.options.comment" as="product_info_options_comment" template="MageVision_CartProductComment::product/view/comment.phtml" before="product.info.options.wrapper.bottom"/>
        </referenceBlock>
    </body>
</page>