<script>
require([
    'jquery',
    'Magento_Ui/js/modal/alert',
    'prototype'
], function(jQuery, alert){
    function product_sync() {
        params = {
        };

        new Ajax.Request('<?php echo $block->getAjaxUrl() ?>', {
            loaderArea:     true,
            asynchronous:   true,
            parameters:     params,
            onSuccess: function(transport) {
                alert({
                    content: 'Products Sync is completed.'
                })
            }
        });
    }

    jQuery('#productSync').click(function () {
        product_sync();
    });
});
</script>

